{
  "name": "@justinhaaheim/version-manager",
  "description": "A comprehensive version tracking system for JavaScript/TypeScript projects with support for semantic versioning, build numbers, and runtime versions",
  "version": "0.4.7",
  "main": "dist/reader.js",
  "types": "dist/reader.d.ts",
  "bin": {
    "version-manager": "./dist/index.js",
    "dynamic-version": "./dist/index.js",
    "jvm": "./dist/index.js"
  },
  "exports": {
    ".": "./dist/reader.js",
    "./reader": "./dist/reader.js",
    "./metro-plugin": "./dist/metro-plugin.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "bun run dynamic-version:generate",
    "build": "tsc --project tsconfig.build.json",
    "predev": "bun run dynamic-version:generate",
    "dev": "tsc --project tsconfig.build.json --watch",
    "clean": "rm -rf dist/",
    "prepublishOnly": "bun run clean && bun run build",
    "lint-base": "eslint --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "bun run lint-base -- --fix .",
    "lint:fix:file": "bun run lint-base -- --fix",
    "lint": "bun run lint-base -- .",
    "lint:no-cache": "bun run lint-base -- --no-cache .",
    "prettier-check": "prettier --check .",
    "prettier": "prettier --write .",
    "prettier:write:file": "prettier --write --ignore-unknown",
    "signal:serial": "bun run ts-check; bun run lint; bun run prettier-check",
    "signal": "bun run signal:serial",
    "signal:parallel": "concurrently --names \"TS,LINT,PRETTIER\" -c \"bgBlack.bold,bgRed.bold,bgCyan.bold\" \"bun run ts-check\" \"bun run lint\" \"bun run prettier-check\"",
    "ts-check": "tsc --noEmit",
    "ts-check-masked": "bun run ts-check",
    "prepare": "husky && bun run dynamic-version:generate",
    "test:local": "bun src/index.ts",
    "test:local:help": "bun src/index.ts --help",
    "test:local:install": "bun src/index.ts install",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:fixtures": "bun tests/scripts/create-fixtures.ts",
    "prestart": "bun run dynamic-version:generate",
    "jvm": "bun src/index.ts",
    "dynamic-version": "bun src/index.ts",
    "dynamic-version:install": "bun src/index.ts install",
    "dynamic-version:install-scripts": "bun src/index.ts install-scripts",
    "dynamic-version:generate": "bun src/index.ts --no-fail"
  },
  "dependencies": {
    "@inquirer/prompts": "7.10.1",
    "chokidar": "^3.6.0",
    "yargs": "18.0.0",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@types/bun": "1.2.23",
    "@types/node": "^20.0.0",
    "@types/yargs": "17.0.33",
    "concurrently": "8.2.1",
    "eslint": "9.31.0",
    "eslint-config-jha-react-node": "github:justinhaaheim/eslint-config-jha-react-node",
    "husky": "9.1.7",
    "lint-staged": "^14.0.1",
    "prettier": "3.6.2",
    "typescript": "~5.8.3"
  },
  "keywords": [
    "version",
    "versioning",
    "semver",
    "build",
    "release",
    "version-manager",
    "cli",
    "git",
    "git-hooks",
    "react",
    "react-native",
    "development"
  ],
  "author": "Justin Haaheim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justinhaaheim/version-manager.git"
  },
  "bugs": {
    "url": "https://github.com/justinhaaheim/version-manager/issues"
  },
  "homepage": "https://github.com/justinhaaheim/version-manager#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "**/*": "prettier --check --ignore-unknown",
    "src/**/*.(js|jsx|cjs|ts|tsx)": [
      "eslint --cache --max-warnings=0 --no-warn-ignored"
    ]
  }
}
