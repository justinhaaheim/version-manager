{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.codeActionsOnSave": [
      // Run ESLint fixers _before_ prettier to ensure the user doesn't need to do multiple saves
      "source.fixAll.eslint",
      "source.fixAll.format"
    ]
  },
  "[typescript]": {
    "editor.codeActionsOnSave": [
      // Run ESLint fixers _before_ prettier to ensure the user doesn't need to do multiple saves
      "source.fixAll.eslint",
      "source.fixAll.format"
    ]
  },
  "[typescriptreact]": {
    "editor.codeActionsOnSave": [
      // Run ESLint fixers _before_ prettier to ensure the user doesn't need to do multiple saves
      "source.fixAll.eslint",
      "source.fixAll.format"
    ]
  },
  // "typescript.tsdk": "node_modules/typescript/lib",
  "search.exclude": {
    "**/.yarn": true,
    "**/package-lock.json": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",

  // Tell VSCode to use non-relative imports by default
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferences.importModuleSpecifier": "non-relative",

  "colorize.languages": ["javascript", "typescript", "typescriptreact"],
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#22ab07",
    "activityBar.background": "#22ab07",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#294af6",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#22ab07",
    "statusBar.background": "#187a05",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#22ab07",
    "statusBarItem.remoteBackground": "#187a05",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#187a05",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#187a0599",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#187a05"

  // Eslint stuff:
  // "eslint.debug": true
  // "eslint.options": {
  //   "extensions": [".cjs", ".js", ".jsx", ".ts", ".tsx"]
  // }
}
